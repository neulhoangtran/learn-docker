docker run -d -p 80:80 docker/getting-started:pwd
git remote add origin https://github.com/HoangTN96/learn-docker.git
git fetch; git checkout master;
docker build -t docker-101 .
docker images // check the images are  running

docker exec -it <container> <cmd> 
docker exec -it U1 bash

docker attach <container>
//truy cập 1 container

ubuntu
apt update -y : update ubuntu
app install htop
//htop liệt kê các tiến trình đang chạy
# Đối với Ubuntu
sudo apt-get install htop

# Đối với centos

sudo yum -y install epel-release
sudo yum -y install htop


//lưu container thành images
docker commit <container> image:tag
eg. docker commit U1 testimage:version1
docker load -i <file>
docker tag <id> <name>:<version>
docker tag ff new:version2

